<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vsn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.user.SettingsActivity"></activity>
        <activity
            android:name=".presentation.board.BoardActivity"
            android:label="@string/title_activity_board_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.user.SignInActivity" />
        <activity android:name=".presentation.board.BoardListActivity" />
        <activity
            android:name=".presentation.user.AccountCreationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.NOTE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.note.NoteEditActivity"></activity>
        <activity android:name=".presentation.board.BoardSettingsActivity"></activity>
    </application>

</manifest>